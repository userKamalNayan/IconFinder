<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IconFinder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/title_text_color</item>
        <item name="subtitleTextColor">@color/title_text_color</item>
        <item name="elevation">0dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppTheme.Screen.Title</item>
    </style>


    <style name="TextAppearance.AppTheme.Screen.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/lato_heavy</item>
        <item name="android:fontFamily">@font/lato_heavy</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>